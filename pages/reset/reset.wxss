.container{
  border-top: 1px solid #eee;
}
.container>view{
  margin: 0 20rpx;
}
.container>view:not(:last-child){
  border-bottom: 1px solid #eee;
  display: flex;
  height: 100rpx;
  align-items: center;
  font-size: 30rpx;
}
.container>view:nth-child(3){
  margin-bottom: 80rpx;
}
.container>view>view:first-child{
  width: 200rpx;
  padding-left: 20rpx;
}

.btn{
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  text-align: center;
  background: #377df6;
  color: #fff;
}