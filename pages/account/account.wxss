.container{
  min-height: 100vh;
  background: #eee;
}
.header{
  height: 125rpx;
  background: #377df6;
  color: #fff;
  font-size: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.total{
  display: flex;
}
.total>view>text:first-child{
  padding-left: .5em;
}
.total>view>text:last-child{
  font-size: 42rpx;
}
.allkind{
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}
.allkind>view{
  margin-right: .5em;
  padding: 0 15rpx;
  border-radius: 20rpx;
  background: #3170dd;
  display: flex;
  flex-direction: row;
}
.allkind>view>view:first-child{
  margin-right: .5em;
}

.list{
  background: #fff;
  margin: 15rpx;
  border: 2rpx solid #ddd;
  border-radius: 15rpx;
}
.list>view:not(:last-child){
  border-bottom: 2rpx solid #ddd;
}
.title{
  background: #eee;
  border-radius: 15rpx 15rpx 0 0;
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
}
.title>view:first-child{
  font-size: 36rpx;
  font-weight: 600;
}
.title>view:last-child{
  display: flex;
}
.output,.income{
  display: flex;
}
.output>view:first-child,.income>view:first-child{
  width: 40rpx;
  height: 40rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  background: #377df6;
  color: #fff;
  border-radius: 50%;
  text-align: center;
}
.output>view:last-child,.income>view:last-child{
  font-size: 22rpx;
  padding-top: 11rpx;
  margin:0 11rpx;
}

.list-item{
  display: flex;
  justify-content: space-between;
  padding: 15rpx 20rpx;
}
.list-item>view:last-child{
  color: #f00;
}
.list-item>view>view:first-child{
  display: flex;
}
.list-item>view>view:last-child{
  margin-top: 24rpx;
  font-size: 24rpx;
}
.list-icon{
  color: #377df6;
}

.writedown{
  width: 75rpx;
  height: 75rpx;
  line-height: 75rpx;
  background: #fff;
  position: fixed;
  bottom: 125rpx;
  right: 25rpx;
  text-align: center;
  border-radius: 50%;
  color: #377df6;
  font-size: 48rpx;
}

.show-header,.show-input,.show-tab,.show-text{
  width: 670rpx;
  padding:20rpx 0;
  margin: 0 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}
.show-header{
  padding-top: 80rpx;
}
.show-header>view>text{
  padding:0 .8em;
  border-radius: 1em;
}
.show-header>view:first-child>text:last-child{
  margin-left: 12rpx;
}
.input-tab-normal{
  background: #eee;
  color: #888;
  border: 2rpx solid #fff;
}
.input-tab-active{
  border: 2rpx solid #377df7;
  color: #377df7;
  background: #edfaf6;
}
.show-header>view:last-child{
  display: flex;
  background: #eee;
  padding:0 .5em;
  border-radius: 1em;
}
.show-header>view:last-child>view:last-child{
  padding-left: .5em;
}

.show-input{
  border-bottom: 2rpx solid #eee;
  display: flex;
  align-items: center;
  font-size: 48rpx;
}
.show-input>view:first-child{
  padding:0 20rpx;
  font-weight: bold;
}
.show-input>view:last-child{
  flex:1;
  font-size: 42rpx;
}

.show-tab{
  justify-content: flex-start;
  overflow-x: auto;
}
.show-tab>view{
  min-width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50%;
  background: #eee;
  color: #888;
  font-size: 18rpx;
  margin: 0 20rpx;
}
.show-tab>.activeTab{
  background: #377df6;
  color: #fff;
}

.show-text{
  flex-direction: column;
  align-items: flex-start;
}
.show-text>view:first-child{
  font-size: 28rpx;
  margin-bottom: 20rpx;
  color: #3170dd;
}
textarea{
  width: 650rpx;
  border: 2rpx solid #eee;
  padding: 10rpx;
  font-size: 26rpx;
}

.confirmBtn{
  width: 630rpx;
  padding:20rpx 0;
  margin: 0 60rpx 20rpx;
  height: 75rpx;
  background: #3170dd;
  border-radius: 5rpx;
  color: #fff;
  text-align: center;
}

.tabList{
  background: #f5f5f5;
}
.tabList>view:first-child{
  background: #fff;
  text-align: center;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.tabList>view:not(:first-child){
  margin: 0 20rpx;
}
.tabList>view:nth-child(2){
  background: #fff;
  text-align: center;
  width: 195rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.outputList>view:first-child,.incomeList>view:first-child{
  font-size: 28rpx;
  color: #888;
  margin: 20rpx 0;
}
.outputList>view:not(:first-child),.incomeList>view:not(:first-child){
  display: flex;
  display: inline-block;
  flex-wrap: wrap;
  background: #fff;
  margin: 0 40rpx 20rpx 0;
  text-align: center;
  width: 195rpx;
  height: 60rpx;
  line-height: 60rpx;
}

#listTabActive{
  background-color: #377df7;
  color: #fff;
}